{
  "name": "skeletor",
  "version": "3.0.0",
  "description": "Extensible front-end framework",
  "main": "index.js",
  "jspm": {
    "name": "skeletor",
    "main": "main.js",
    "dependencies": {
      "jquery": "npm:jquery@^3.1.1",
      "logdown": "npm:logdown@^1.4.2",
      "onMediaQuery": "github:JoshBarr/on-media-query@^0.2.0",
      "picturefill": "npm:picturefill@^3.0.2",
      "skeletor-core": "local:skeletor-core@3.0.0",
      "skeletor-plugin-accordion": "local:skeletor-plugin-accordion@0.1.0",
      "skeletor-plugin-base": "local:skeletor-plugin-base@0.1.0",
      "svg4everybody": "npm:svg4everybody@^2.1.3"
    },
    "devDependencies": {
      "plugin-babel": "npm:systemjs-plugin-babel@^0.0.16"
    },
    "peerDependencies": {
      "child_process": "npm:jspm-nodelibs-child_process@^0.2.0",
      "process": "npm:jspm-nodelibs-process@^0.2.0"
    },
    "overrides": {
      "npm:jquery@3.1.1": {
        "format": "amd"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/delphic-digital/Skeletor.git"
  },
  "keywords": [
    "skeletor",
    "delphic"
  ],
  "author": "delphic",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/delphic-digital/Skeletor/issues"
  },
  "homepage": "http://skele.to/r",
  "devDependencies": {
    "bourbon": "^4.2.7",
    "breakpoint-sass": "^2.7.0",
    "jspm": "^0.17.0-beta.29",
    "node-sass": "^3.10.1",
    "node-sass-magic-importer": "^2.1.1",
    "normalize-scss": "^6.0.0",
    "npm-run-all": "^3.1.0",
    "sane": "^1.4.1",
    "sass-inline-svg": "^0.2.0",
    "sass-jspm-importer": "0.0.6",
    "sass-watch": "^0.1.0",
    "skeletor-sass-utilities": "github:delphic-digital/skeletor-sass-utilities",
    "sprity-cli": "^1.0.1",
    "sprity-gm": "^1.0.2",
    "sprity-sass": "^1.0.4",
    "susy": "^2.2.12",
    "svg-sprite": "^1.3.6"
  },
  "scripts": {
    "start": "npm-run-all --parallel server unbundle watch:css",
    "watch:css": "sane \"npm run build:css -- --source-map true --output-style expanded\" Static/src/scss --glob=**/*.scss",
    "build": "npm-run-all build:*",
    "build:js": "jspm bundle Static/src/js/main.js Static/dist/js/main.js --inject",
    "build:css": "node-sass Static/src/scss -o Static/dist/css --importer npm_scripts/customSassImporter.js --functions npm_scripts/customSassFunctions.js",
    "build:sprite": "sprity create Static/assets/spritesheets/ Static/src/sprites/bitmaps/*.png -s ../../src/scss/partials/base/_sprites.scss -c ../../assets/spritesheets -d 1:72 -d 2:192 -p sass --style-type scss --engine gm -t ./sass_retina.template.handlebars",
    "build:svg": "svg-sprite --symbol --symbol-dest . --symbol-sprite vector.spritesheet.svg --symbol-example --symbol-example-dest vector.example.html --dest=Static/assets/spritesheets Static/src/sprites/vectors/*.svg",
    "server": "browser-sync start --server --files *.html, Static/dist/css/*.css, Static/src/js/**/*.js --no-open",
    "unbundle": "jspm unbundle Static/src/js/main.js"
  }
}
