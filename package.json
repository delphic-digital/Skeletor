{
  "name": "skeletor",
  "version": "3.0.0",
  "description": "Extensible front-end framework",
  "main": "index.js",
  "jspm": {
    "name": "skeletor",
    "main": "main.js",
    "dependencies": {
      "jquery": "npm:jquery@^3.1.1"
    },
    "devDependencies": {
      "plugin-babel": "npm:systemjs-plugin-babel@^0.0.16"
    },
    "overrides": {
      "npm:jquery@3.1.1": {
        "format": "amd"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/delphic-digital/Skeletor.git"
  },
  "keywords": [
    "skeletor",
    "delphic"
  ],
  "author": "delphic",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/delphic-digital/Skeletor/issues"
  },
  "homepage": "http://skele.to/r",
  "devDependencies": {
    "bourbon": "^4.2.7",
    "breakpoint-sass": "^2.7.0",
    "jspm": "^0.17.0-beta.29",
    "node-sass": "^3.10.1",
    "node-sass-globbing": "0.0.23",
    "node-sass-import": "^1.1.0",
    "normalize.css": "^5.0.0",
    "npm-run-all": "^3.1.0",
    "slick-carousel": "^1.6.0",
    "susy": "^2.2.12"
  },
  "scripts": {
    "start": "npm-run-all --parallel server unbundle watch:*",
    "watch:js": "echo 'watching js'",
    "watch:css": "npm run build:css -- -w",
    "watch:static": "echo 'watching static'",
    "build": "npm-run-all build:*",
    "build:js": "jspm bundle Static/src/js/main.js Static/dist/js/main.js --inject",
    "build:css": "node-sass Static/src/scss/main.scss Static/dist/css/main.css  --output-style compact --importer node_modules/node-sass-import",
    "server": "browser-sync start --server --files *.html, Static/dist/css/*.css, Static/src/js/*.js --no-open",
    "server:reload": "browser-sync reload",
    "unbundle": "jspm unbundle Static/src/js/main.js"
  }
}
